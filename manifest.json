{
  "manifest_version": 3,
  "name": "Intentful",
  "description": "test description",
  "version": "0",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "built/elm-background.js",
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "built/background_script.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.mozilla.org/*"
      ],
      "js": [
        "src/js/content_script.js"
      ],
      "css": [
        "built/css/styles.css"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browser_action.html",
    "default_title": "Intentful"
  },
  "options_ui": {
    "page": "options/index.html",
    "browser_style": false
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "alarms"
  ]
}